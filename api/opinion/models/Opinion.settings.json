{
  "connection": "default",
  "collectionName": "opinions",
  "info": {
    "name": "opinion",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": [
      "created_at",
      "updated_at"
    ],
    "comment": ""
  },
  "attributes": {
    "title": {
      "default": "",
      "type": "string"
    },
    "comments": {
      "collection": "comment",
      "via": "opinion"
    },
    "user": {
      "model": "user",
      "via": "opinions",
      "plugin": "users-permissions"
    },
    "body": {
      "default": "",
      "type": "text",
      "maxLength": 500
    },
    "video": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "vote": {
      "default": 0,
      "type": "integer"
    },
    "replies": {
      "default": 0,
      "type": "integer"
    },
    "views": {
      "default": 0,
      "type": "integer"
    },
    "selected_answer": {
      "type": "json",
      "default": "{}"
    },
    "poll": {
      "model": "poll",
      "via": "opinions"
    },
    "vote_users": {
      "collection": "user",
      "via": "vote_opinions",
      "dominant": true,
      "plugin": "users-permissions"
    }
  }
}