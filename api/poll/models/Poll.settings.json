{
  "connection": "default",
  "collectionName": "polls",
  "info": {
    "name": "poll",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": [
      "created_at",
      "updated_at"
    ],
    "comment": ""
  },
  "attributes": {
    "title": {
      "default": "",
      "type": "string",
      "required": true
    },
    "body": {
      "default": "",
      "type": "text",
      "maxLength": 1500
    },
    "votes": {
      "default": 0,
      "type": "biginteger"
    },
    "title_bg": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "user": {
      "model": "user",
      "via": "polls",
      "plugin": "users-permissions"
    },
    "tags": {
      "collection": "tag",
      "via": "polls",
      "dominant": true
    },
    "replies": {
      "default": "",
      "type": "integer"
    },
    "views": {
      "default": "",
      "type": "integer"
    },
    "league": {
      "model": "league",
      "via": "polls"
    },
    "date_start": {
      "default": "",
      "type": "date"
    },
    "date_end": {
      "default": "",
      "type": "date"
    },
    "upcoming_box": {
      "type": "boolean"
    },
    "answer_choices": {
      "type": "json",
      "default": "{}"
    },
    "opinions": {
      "collection": "opinion",
      "via": "poll"
    }
  }
}